%nav.navbar.navbar-default{role: 'navigation'}
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', "data-toggle" => "collapse", "data-target" => "#bs-example-navbar-collapse-1"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path} Brewery

    .collapse.navbar-collapse#bs-example-navbar-collapse-1
      %ul.nav.navbar-nav
        = render partial: 'common/nav_links', locals: { options: { "New Recipe" => new_recipe_path, 
        "All Recipes" => recipes_path }}

      %ul.user-info.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle#user-dropdown{ "data-toggle" => "dropdown", role: "button", "aria-expanded" => "false" }
              = (current_user.name || current_user.email)
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li= link_to "Log out", destroy_user_session_path, method: :delete
        - else
          %li= link_to "Sign In", new_user_session_path
          %li= link_to "Sign Up", new_user_registration_path
