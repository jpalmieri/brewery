%h1
  = @recipe.name

%p Style: #{@recipe.style}
%p Batch Size: #{@recipe.batch_size} gal.
%p Original Gravity: #{'%.3f' % @recipe.original_gravity}
%p Yeast:
%ul
  - @recipe.yeasts.each do |yeast|
    %li
      = yeast.name
      #{yeast.attenuation*100} %
%p Summary: #{@recipe.summary}
%p Grains:
%ul
  - @recipe.grains.each do |grain|
    %li
      = grain.name
      #{grain.weight} lbs.
%p Hops:
%ul
  - @recipe.hops.each do |hop|
    %li
      = hop.name
      = hop.weight
      = hop.boil_time
%p Notes: #{@recipe.notes}